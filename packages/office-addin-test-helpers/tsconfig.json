{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "lib",
        "strict": false,
        "alwaysStrict": false,
        "noImplicitUseStrict": true,
        "types": [
            "node",
            "es6-promise",
        ],
        "inlineSources": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}